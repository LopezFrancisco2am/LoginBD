<!DOCTYPE html>
<html>
<head>
    <title>Pagos</title>
    <!-- Incluye Bootstrap CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <style type="text/css">
        body {
            background-color: #f0f0f0; /* Cambia el color de fondo aquí */
        }
        /* Opcional: Define el color del texto como negro por defecto */
        .text-color-default {
            color: black; /* Cambia el color del texto aquí si es necesario */
        }

        .table-container {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h4>Lista de Pagos</h4>
                <div class="table-responsive">
                    <table id="pagosTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Monto</th>
                                <th>Fecha de pago</th>
                                <th>Paquete</th>
                                <th>Cliente</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Los datos se cargarán aquí con JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        fetch('/Acceso/GetPagos')
            .then(response => response.json())
            .then(data => {
                const tableBody = document.querySelector('#pagosTable tbody');
                tableBody.innerHTML = ''; // Limpia el contenido actual

                data.forEach(pago => {
                    // Crea una fila para cada pago
                    const row = document.createElement('tr');
                    row.innerHTML = `
                <td>${pago.IdPago || ''}</td>
                <td>${pago.Monto || ''}</td>
                <td>${pago.FechaPago || ''}</td>
                <td>${pago.Paquete || ''}</td>                            
                <td>${pago.Cliente || ''}</td>
            `;
                    tableBody.appendChild(row);
                });
            })
            .catch(error => console.error('Error al obtener datos de pagos:', error));
    </script>
</body>
</html>
